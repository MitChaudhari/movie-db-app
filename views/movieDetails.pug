extends layout

block content
  .container.mt-5
    a.btn.btn-secondary.mb-3(href='/movies') Back to List
    .row
      .col-md-12
        h1= movie.title
        p
          strong Director: 
          | #{movie.director}
        p
          strong Year: 
          | #{movie.year}
        if movie.notes
          p
            strong Notes: 
            | #{movie.notes}
        .mt-3.d-flex.align-items-center
          a.btn.btn-primary(href=`/movies/${movie._id}/edit`).mr-2 Edit
          // The Delete button form
          form(action=`/movies/${movie._id}/delete`, method="POST", onsubmit="return confirm('Are you sure you want to delete this movie?');")
            button.btn.btn-danger(type="submit") Delete

